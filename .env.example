# News Trading Ideas - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# OpenAI API Configuration (GPT-5 Family)
# ============================================================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# Model Selection
OPENAI_CLUSTERING_MODEL=gpt-5-mini      # For grouping headlines (fast & cheap)
OPENAI_IDEAS_MODEL=gpt-5                # For trading ideas (with thinking)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Web Search Tool (enables real-time market data lookup)
ENABLE_WEB_SEARCH=true

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=sqlite+aiosqlite:///./data/news_trading.db

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=News Trading Ideas
VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# ============================================================================
# CORS Settings
# ============================================================================
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

# ============================================================================
# RSS Feed Configuration
# ============================================================================
FEED_POLL_INTERVAL=300          # Seconds between feed polls (5 minutes)
RSS_TIMEOUT=10                   # Timeout for RSS requests (seconds)
RSS_MAX_RETRIES=3               # Max retries for failed RSS fetches

# ============================================================================
# AI Processing Configuration
# ============================================================================
AI_PROCESS_INTERVAL=600         # Seconds between AI processing runs (10 min)
CLUSTERING_BATCH_SIZE=40        # Articles per clustering batch
CLUSTERING_THRESHOLD=0.8        # Cosine similarity threshold
TOP_EVENTS_FOR_IDEAS=10         # Generate ideas for top N events

# ============================================================================
# Cost Controls
# ============================================================================
MAX_DAILY_OPENAI_COST=5.0       # Maximum daily OpenAI spend (USD)
OPENAI_REQUESTS_PER_MINUTE=50   # Rate limit for API calls

# ============================================================================
# Data Retention
# ============================================================================
DATA_RETENTION_DAYS=1           # Keep articles for 24 hours
EVENT_STALE_THRESHOLD_HOURS=6   # Mark events stale after 6 hours

# ============================================================================
# Performance Settings
# ============================================================================
MAX_WORKERS=3                   # Concurrent API calls
