# Database
DATABASE_URL=sqlite+aiosqlite:///./data/news_trading.db

# OpenAI API
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_CLUSTERING_MODEL=gpt-4o-mini
OPENAI_IDEAS_MODEL=gpt-4-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Application
APP_NAME=News Trading Ideas
VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# CORS
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# RSS Feed Polling
FEED_POLL_INTERVAL=300
RSS_TIMEOUT=10
RSS_MAX_RETRIES=3

# AI Processing
AI_PROCESS_INTERVAL=600
CLUSTERING_BATCH_SIZE=40
CLUSTERING_THRESHOLD=0.8
TOP_EVENTS_FOR_IDEAS=10

# API Rate Limits
MAX_DAILY_OPENAI_COST=5.0
OPENAI_REQUESTS_PER_MINUTE=50

# Data Retention
DATA_RETENTION_DAYS=24
EVENT_STALE_THRESHOLD_HOURS=6

# Performance
MAX_WORKERS=3
CACHE_TTL=3600
